<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardDetailActivity">


    <com.rey.material.widget.ImageView
        android:id="@+id/detail_img_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@mipmap/demo"
        app:layout_constraintBottom_toTopOf="@+id/detail_tv_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pandatem.jiyi.CircleImageView.CircleImageView
        android:id="@+id/detail_img_person_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/img"
        app:layout_constraintStart_toEndOf="@+id/detail_img_cover"
        app:layout_constraintTop_toBottomOf="@+id/detail_tv_position" />

    <TextView
        android:id="@+id/detail_tv_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/detail_img_person_cover"
        app:layout_constraintTop_toBottomOf="@+id/detail_tv_position" />

    <TextView
        android:id="@+id/detail_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="8sp"
        android:minHeight="160dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_img_cover" />

    <TextView
        android:id="@+id/detail_tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="13dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/detail_img_cover"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>